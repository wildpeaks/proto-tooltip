#VRML V2.0 utf8

EXTERNPROTO Tooltip [
	exposedField  SFVec3f  center
	exposedField  SFVec3f  tip
	exposedField  SFVec2f  size
	exposedField  SFFloat  border
	field         SFBool   solid
] "../src/proto.Tooltip.wrl#Tooltip"


PROTO Example [
	exposedField  SFVec3f   translation  0 0 0
	exposedField  SFFloat   border       0
	exposedField  MFString  string       []
]{
	Transform {
		translation IS translation
		children [

			Shape {
				appearance Appearance {
					material Material {
						diffuseColor 0 0 0
						emissiveColor 0 0 0
					}
				}
				geometry DEF tooltip Tooltip {
					center 0 0 0
					tip 4 0 0
					size 4 2
					border IS border
				}
			}

			# Contents of the tooltip
			DrawGroup {
				restoreOp TRUE
				drawOp DrawOp {
					op [0, 0, 1, 0]
				}
				sortAlphaInGroup TRUE
				children [
					Shape {
						appearance Appearance {
							material Material {
								diffuseColor 0 0 0
								emissiveColor 0 1 0
							}
						}
						geometry IndexedLineSet {
							coordIndex [0 3 2 1 0 -1]
							coord Coordinate {
								point [-2 1 0, 2 1 0, 2 -1 0, -2 -1 0]
							}
						}
					}
					Transform {
						translation 0 0.25 0
						children Shape {
							appearance Appearance {
								material Material {
									diffuseColor 0 0 0
									emissiveColor 1 1 1
								}
							}
							geometry Text {
								string IS string
								fontStyle FontStyle {
									size 0.5
									family "Consolas"
									style "BOLD USE_TEXTURE"
									justify "MIDDLE"
								}
							}
						}
					}
				]
			}
		]
	}
}


