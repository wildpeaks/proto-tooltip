#VRML V2.0 utf8

EXTERNPROTO Tooltip [
	exposedField  SFVec3f  center
	exposedField  SFVec3f  tip
	exposedField  SFVec2f  size
	exposedField  SFFloat  radius
	field         SFBool   solid
] "../src/proto.Tooltip.wrl#Tooltip"


WorldInfo {
	title "Tests the 'solid' property of Tooltip"
}

Viewpoint {
	position 0 0 12
	orientation 0 1 0 0
	fieldOfView 0.785398
}


DEF example-1 Transform {
	translation 0 2 0
	children Shape {
		appearance DEF appearance Appearance {
			material Material {
				diffuseColor .35 .38 .32
				specularColor .8 1 .83
				ambientIntensity 0
				shininess .12
			}
		}
		geometry Tooltip {
			solid TRUE
			size 2 1
			radius 0.25
			tip 2 -2 0
		}
	}
}

DEF example-2 Transform {
	translation 0 -2 0
	children Shape {
		appearance USE appearance
		geometry Tooltip {
			solid FALSE
			size 2 1
			radius 0.25
			tip 2 -2 0
		}
	}
}


DEF timer TimeSensor {
	loop TRUE
	cycleInterval 1
}
DEF interp OrientationInterpolator {
	key [0, 0.25, 0.5, 0.75, 1]
	keyValue [0 1 0 0, 0 1 0 1.57, 0 1 0 3.14159, 0 1 0 -1.57, 0 1 0 0]
}
ROUTE timer.fraction_changed TO interp.set_fraction
ROUTE interp.value_changed TO example-1.rotation
ROUTE interp.value_changed TO example-2.rotation
